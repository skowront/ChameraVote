<Window x:Class="ChameraVote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChameraVote"
        xmlns:views="clr-namespace:ChameraVote.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" x:Name="registerButton" Content="Register" Click="registerButton_Click"></Button>
        <Button Grid.Column="1" x:Name="loginButton" Content="Login" Click="loginButton_Click"></Button>
        <Button Grid.Column="2" x:Name="voteButton" Content="Vote" Click="voteButton_Click"></Button>
        <Button Grid.Column="3" x:Name="myVotingsButton" Content="My votings" Click="myVotingsButton_Click"></Button>
        <Button Grid.Column="4" x:Name="settingsButton" Content="Configuration" Click="settingsButton_Click"></Button>
    </Grid>
</Window>
