<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ChameraVote.DataTemplates"
                    xmlns:viewModels="clr-namespace:ChameraVote.ViewModels">
    <DataTemplate x:Key="VotingBriefDataTemplate" DataType="{x:Type viewModels:VotingBriefViewModel}">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding Path=Title, Mode=TwoWay}" Margin="0 0 5 0"></TextBlock>
            <TextBlock Text="{Binding Path=Id, StringFormat='Id:{0}', Mode=TwoWay}"></TextBlock>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>