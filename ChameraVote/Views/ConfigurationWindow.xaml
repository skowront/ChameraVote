<Window x:Class="ChameraVote.Views.ConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChameraVote.Views"
        mc:Ignorable="d"
        Title="ConfigurationWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="serverAddressTextBox" Text="{Binding Path=ServerAddress,Mode=TwoWay}"></TextBox>
            <Button x:Name="saveConfigurationButton" Content="Save configuration" Click="saveConfigurationButton_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
