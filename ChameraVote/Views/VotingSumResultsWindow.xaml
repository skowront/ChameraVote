<Window x:Class="ChameraVote.Views.VotingSumResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChameraVote.Views"
        mc:Ignorable="d"
        Title="VotingSumResultsWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="{Binding Path=Title, StringFormat='Voting: {0}'}"></TextBlock>
            <ListView ItemsSource="{Binding Path=VotingOptionSums}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical">
                            <Line Stroke="Green" StrokeThickness="1"  X1="300" Y1="0"></Line>
                            <TextBlock Text="{Binding Path=OptionValue,StringFormat='Option: {0}'}"></TextBlock>
                            <TextBlock Text="{Binding Path=Votes,StringFormat='Votes: {0}'}"></TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Window>
