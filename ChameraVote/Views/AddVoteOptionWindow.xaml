<Window x:Class="ChameraVote.Views.AddVoteOptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChameraVote.Views"
        mc:Ignorable="d"
        Title="AddVoteOptionWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Option description:"></TextBlock>
                <TextBox Text="{Binding Path=OptionValue,Mode=TwoWay}" Width="100"></TextBox>
            </StackPanel>
            <Button x:Name="addButton" Content="Add" Click="addButton_Click"></Button>
        </StackPanel>
        <TextBlock Grid.Row="1" Text="{Binding Path=Status,Mode=TwoWay}"></TextBlock>
    </Grid>
</Window>
