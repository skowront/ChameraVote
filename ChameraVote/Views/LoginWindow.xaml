<Window x:Class="ChameraVote.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChameraVote.Views"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <TextBlock Text="Login:"></TextBlock>
            <TextBox x:Name="loginTextBox" Text="{Binding Path=Username}"></TextBox>
            <TextBlock Text="Password:"></TextBlock>
            <PasswordBox x:Name="userPasswordTextBox"></PasswordBox>
            <Button x:Name="Login" Height="50" Width="100" Content="Login" Click="Login_Click"></Button>
        </StackPanel>
        <TextBlock Grid.Row="1" x:Name="statusTextBox" Text="{Binding Path=Status}"></TextBlock>
    </Grid>
</Window>
